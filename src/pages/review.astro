---
const botToken = import.meta.env.PUBLIC_BOT_TOKEN;
const chatId = import.meta.env.PUBLIC_CHAT_ID;
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Villa Tamaris - Avis</title>
    <style>
      body {
        margin: 0;
        font-family: sans-serif;
        background: #fefefe;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
        min-height: 100vh;
      }
      .container {
        width: 100%;
        max-width: 400px;
        text-align: center;
      }
      h1 {
        font-weight: 300;
        font-size: 1.5rem;
        margin-bottom: 1rem;
      }
      .stars {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        cursor: pointer;
      }
      .star {
        width: 40px;
        height: 40px;
        border: 2px solid gray;
        border-radius: 50%;
        background: none;
        position: relative;
      }
      .star:hover,
      .star.hovered {
        border-color: gold;
      }
      .hidden {
        display: none;
      }
      form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1.5rem;
      }
      textarea {
        width: 100%;
        resize: vertical;
        min-height: 100px;
        padding: 0.5rem;
      }
      button {
        background: black;
        color: white;
        border: none;
        padding: 0.75rem;
        cursor: pointer;
      }
      .message {
        margin-top: 2rem;
        font-size: 1.2rem;
        font-weight: 500;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Villa Tamaris</h1>
      <div class="stars" id="star-container">
        <div class="star" data-value="1"></div>
        <div class="star" data-value="2"></div>
        <div class="star" data-value="3"></div>
        <div class="star" data-value="4"></div>
        <div class="star" data-value="5"></div>
      </div>

      <form id="review-form" class="hidden">
        <textarea id="comment" placeholder="Laissez un commentaire..."></textarea>
        <button type="submit">Publier</button>
      </form>

      <div class="message" id="message"></div>
    </div>

    <script>
      const stars = document.querySelectorAll('.star');
      const form = document.getElementById('review-form');
      const comment = document.getElementById('comment');
      const message = document.getElementById('message');

      const botToken = `${botToken}`;
      const chatId = `${chatId}`;
      const redirectUrl = "https://g.page/r/CTOZ9gJDprgQEAE/review";

      let selectedStars = 0;

      stars.forEach((star, index) => {
        star.addEventListener('mouseenter', () => {
          highlightStars(index);
        });

        star.addEventListener('mouseleave', () => {
          clearHighlights();
        });

        star.addEventListener('click', () => {
          selectedStars = index + 1;
          if (selectedStars === 5) {
            window.location.href = redirectUrl;
          } else {
            form.classList.remove('hidden');
          }
        });
      });

      function highlightStars(i) {
        stars.forEach((s, index) => {
          if (index <= i) s.classList.add('hovered');
        });
      }

      function clearHighlights() {
        stars.forEach((s) => s.classList.remove('hovered'));
      }

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const text = comment.value.trim();
        const payload = {
          chat_id: chatId,
          text: `⭐ ${selectedStars}/5\n\n${text}`
        };

        try {
          const res = await fetch(`https://api.telegram.org/bot${botToken}/sendMessage`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          });

          if (res.ok) {
            form.remove();
            document.getElementById('star-container').remove();
            message.textContent = "Merci pour votre avis !";
          } else {
            throw new Error();
          }
        } catch {
          form.remove();
          document.getElementById('star-container').remove();
          message.textContent = "Erreur d'envoi. Veuillez vérifier votre connexion.";
        }
      });
    </script>
  </body>
</html>
